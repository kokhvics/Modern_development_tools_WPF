<UserControl x:Class="SwitchesApp.SwitchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <UserControl.Resources>

        <!-- Стиль шестиугольного переключателя -->
        <Style x:Key="HexSwitchStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="HexScale" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="HexRotate" Angle="0"/>
                                </TransformGroup>
                            </Grid.RenderTransform>

                            <Polygon x:Name="HexBody"
                                     Stroke="Black"
                                     StrokeThickness="2"
                                     Fill="#FFCCCCCC"
                                     Points="60,0 120,30 120,90 60,120 0,90 0,30"/>

                            <Rectangle x:Name="PointerBody"
                                       Width="18"
                                       Height="70"
                                       Fill="#77dd77"
                                       RadiusX="4" RadiusY="4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <Rectangle x:Name="PointerHead"
                                       Width="18"
                                       Height="22"
                                       Fill="Red"
                                       RadiusX="4" RadiusY="4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Margin="0,24,0,0"/>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HexBody" Property="Fill" Value="#FFDDDDDD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HexBody" Property="Fill" Value="#FFBBBBBB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="HexBody" Property="Fill" Value="#FF999999"/>
                                <Setter TargetName="PointerBody" Property="Fill" Value="#FF777777"/>
                                <Setter TargetName="PointerHead" Property="Fill" Value="#FFAA5555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- Сам переключатель -->
    <Button Style="{StaticResource HexSwitchStyle}"
            Margin="20,0"
            MouseEnter="Switch_MouseEnter"
            MouseLeave="Switch_MouseLeave"
            Click="Switch_Click"/>
</UserControl>
