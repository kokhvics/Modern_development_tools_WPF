                <Image x:Name="ImgSign1" Source="Images/RU_road_sign_1.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
