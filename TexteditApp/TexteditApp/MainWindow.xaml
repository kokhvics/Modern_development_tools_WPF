<Window x:Class="TexteditApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовый редактор" Height="650" Width="1050"
        Background="LightGray">

    <!-- Canvas для расположения 5 блоков дугой -->
    <Canvas x:Name="MainCanvas" 
            IsHitTestVisible="True">

        <!-- БЛОК 1 (ЛЕВЫЙ КРАЙ — вытянутый слева) -->
        <Border x:Name="Block1" 
                Width="150" Height="110" 
                Canvas.Left="30" Canvas.Top="270"
                Background="White"
                CornerRadius="15"
                BorderBrush="LightBlue" BorderThickness="2"
                Opacity="0.7"
                RenderTransformOrigin="0.7,0.7">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="Scale1" ScaleX="1.0" ScaleY="1.2"/>
                    <SkewTransform x:Name="Skew1" AngleX="0" AngleY="20"/>
                    <TranslateTransform x:Name="Translate1" X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBox x:Name="TextBox1"
                     Margin="10"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Text="Блок 1&#x0a;Введите текст здесь..."
                     GotFocus="TextBlock_GotFocus"
                     LostFocus="TextBlock_LostFocus"/>
        </Border>

        <!-- БЛОК 2 -->
        <Border x:Name="Block2" 
                Width="170" Height="110" 
                Canvas.Left="200" Canvas.Top="300"
                Background="White"
                CornerRadius="15"
                BorderBrush="LightBlue" BorderThickness="2"
                Opacity="0.7"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="Scale2" ScaleX="1.2" ScaleY="1.25"/>
                    <SkewTransform x:Name="Skew2" AngleX="0" AngleY="8"/>
                    <TranslateTransform x:Name="Translate2" X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBox x:Name="TextBox2"
                     Margin="10"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Text="Блок 2&#x0a;Введите текст здесь..."
                     GotFocus="TextBlock_GotFocus"
                     LostFocus="TextBlock_LostFocus"/>
        </Border>

        <!-- БЛОК 3 (ЦЕНТР — нормальный) -->
        <Border x:Name="Block3" 
                Width="220" Height="140" 
                Canvas.Left="390" Canvas.Top="300"
                Background="White"
                CornerRadius="15"
                BorderBrush="LightBlue" BorderThickness="2"
                Opacity="0.7"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="Scale3" ScaleX="1.0" ScaleY="1.0"/>
                    <SkewTransform x:Name="Skew3" AngleX="0" AngleY="0"/>
                    <TranslateTransform x:Name="Translate3" X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBox x:Name="TextBox3"
                     Margin="10"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Text="Блок 3&#x0a;Введите текст здесь..."
                     GotFocus="TextBlock_GotFocus"
                     LostFocus="TextBlock_LostFocus"/>
        </Border>

        <!-- БЛОК 4 -->
        <Border x:Name="Block4" 
                Width="170" Height="110" 
                Canvas.Left="630" Canvas.Top="300"
                Background="White"
                CornerRadius="15"
                BorderBrush="LightBlue" BorderThickness="2"
                Opacity="0.7"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="Scale4" ScaleX="1.2" ScaleY="1.25"/>
                    <SkewTransform x:Name="Skew4" AngleX="0" AngleY="-8"/>
                    <TranslateTransform x:Name="Translate4" X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBox x:Name="TextBox4"
                     Margin="10"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Text="Блок 4&#x0a;Введите текст здесь..."
                     GotFocus="TextBlock_GotFocus"
                     LostFocus="TextBlock_LostFocus"/>
        </Border>

        <!-- БЛОК 5 (ПРАВЫЙ КРАЙ — вытянут справа) -->
        <Border x:Name="Block5" 
                Width="150" Height="110" 
                Canvas.Left="830" Canvas.Top="250"
                Background="White"
                CornerRadius="15"
                BorderBrush="LightBlue" BorderThickness="2"
                Opacity="0.7"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="Scale5" ScaleX="1.2" ScaleY="1.25"/>
                    <SkewTransform x:Name="Skew5" AngleX="0" AngleY="-20"/>
                    <TranslateTransform x:Name="Translate5" X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBox x:Name="TextBox5"
                     Margin="10"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Text="Блок 5&#x0a;Введите текст здесь..."
                     GotFocus="TextBlock_GotFocus"
                     LostFocus="TextBlock_LostFocus"/>
        </Border>

    </Canvas>
</Window>
